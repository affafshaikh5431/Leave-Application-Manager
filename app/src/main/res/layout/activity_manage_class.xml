<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAF8F8F8"
    tools:context=".Admin.ManageClass">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">



        <ImageView
            android:id="@+id/addstudenticon"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/manageclassicon" />

        <TextView
            android:id="@+id/AddClassheading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="23sp"
            android:layout_marginLeft="5dp"
            android:textColor="#1C274C"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:layout_gravity="center"
            android:text="Manage Classes" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="4dp"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/edClassName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="9dp"
                android:layout_marginRight="7dp"
                android:textSize="17sp"
                android:hint="Add Class Name" />

            <Button
                android:id="@+id/addclstn"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/button_border"

                android:text="Add" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:background="#FFFFFF"
        app:cardElevation="3dp"
        app:cardCornerRadius="24dp">

        <!--TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Classes"
            android:textSize="20sp"
            android:textColor="#000"
            android:weight="1"
            android:layout_margin="20dp"/-->

        <ListView
            android:id="@+id/listViewCls"
            android:layout_width="match_parent"
            android:background="#FFFFFF"
            android:divider="@null"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="10dp"
            android:dividerHeight="0dp"
            android:layout_height="match_parent"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"

        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="3dp"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"

            android:layout_marginLeft="11dp"
            android:layout_marginRight="13dp"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/putName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="9dp"
                android:layout_marginRight="9dp"
                android:textSize="17sp"
                android:hint="Edit Classname" />

            <Button
                android:id="@+id/editclsbtn"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                app:backgroundTint="@color/blue"
                android:textColor="#fff"


                android:text="Update" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>